<Window x:Class="Library.AuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление автора" Height="300" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Имя -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Имя:" 
                   VerticalAlignment="Center" Margin="0,0,10,15"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="0" Grid.Column="1" 
                 Height="30" Margin="0,0,0,15"/>

        <!-- Фамилия -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия:" 
                   VerticalAlignment="Center" Margin="0,0,10,15"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="1" Grid.Column="1" 
                 Height="30" Margin="0,0,0,15"/>

        <!-- Дата рождения -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата рождения:" 
                   VerticalAlignment="Center" Margin="0,0,10,15"/>
        <DatePicker x:Name="BirthDatePicker" Grid.Row="2" Grid.Column="1" 
                    Height="30" Margin="0,0,0,15"/>

        <!-- Страна -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Страна:" 
                   VerticalAlignment="Center" Margin="0,0,10,15"/>
        <TextBox x:Name="CountryTextBox" Grid.Row="3" Grid.Column="1" 
                 Height="30" Margin="0,0,0,15"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom">

            <Button x:Name="SaveButton" Content="Сохранить" Width="100" 
                    Height="35" Margin="0,0,10,0" Click="SaveButton_Click"/>

            <Button x:Name="CancelButton" Content="Отмена" Width="100" 
                    Height="35" Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
</Window>