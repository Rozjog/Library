<Window x:Class="Library.GenresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление жанрами" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Список жанров" FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <!-- Таблица с жанрами -->
        <DataGrid x:Name="GenresDataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  AlternatingRowBackground="LightGray"
                  SelectionMode="Single" Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="250"/>
                <DataGridTextColumn Header="Книг" Binding="{Binding Books.Count}" Width="80"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Панель с кнопками -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">

            <Button x:Name="AddGenreButton" Content="Добавить жанр" Width="130" 
                    Margin="0,0,10,0" Padding="5" Click="AddGenreButton_Click"/>

            <Button x:Name="EditGenreButton" Content="Редактировать" Width="120" 
                    Margin="0,0,10,0" Padding="5" Click="EditGenreButton_Click"/>

            <Button x:Name="DeleteGenreButton" Content="Удалить" Width="100" 
                    Margin="0,0,10,0" Padding="5" Click="DeleteGenreButton_Click"/>

            <Button x:Name="CloseButton" Content="Закрыть" Width="100" 
                    Padding="5" Click="CloseButton_Click"/>

        </StackPanel>

    </Grid>
</Window>