<Window x:Class="Library.AuthorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление авторами" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Список авторов" FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <!-- Таблица с авторами -->
        <DataGrid x:Name="AuthorsDataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  AlternatingRowBackground="LightGray"
                  SelectionMode="Single" Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate, StringFormat={}{0:dd.MM.yyyy}}" Width="120"/>
                <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="120"/>
                <DataGridTextColumn Header="Книг" Binding="{Binding Books.Count}" Width="80"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Панель с кнопками -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">

            <Button x:Name="AddAuthorButton" Content="Добавить автора" Width="130" 
                    Margin="0,0,10,0" Padding="5" Click="AddAuthorButton_Click"/>

            <Button x:Name="EditAuthorButton" Content="Редактировать" Width="120" 
                    Margin="0,0,10,0" Padding="5" Click="EditAuthorButton_Click"/>

            <Button x:Name="DeleteAuthorButton" Content="Удалить" Width="100" 
                    Margin="0,0,10,0" Padding="5" Click="DeleteAuthorButton_Click"/>

            <Button x:Name="CloseButton" Content="Закрыть" Width="100" 
                    Padding="5" Click="CloseButton_Click"/>

        </StackPanel>

    </Grid>
</Window>